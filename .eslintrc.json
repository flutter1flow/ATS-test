{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"node"
	],
	"rules": {
		// Add or override specific rules here
		"node/no-unsupported-features/es-syntax": [
			"error",
			{ "version": ">=16.0.0", "ignores": [] }
		],
		"constructor-super": "off" // Disable rule if causing issues
	}
}
